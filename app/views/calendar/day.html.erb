<script type="text/javascript" charset="utf-8">
  $(function() {
    new Highcharts.Chart({
      chart: {
        renderTo: "CalendarCharts_1",
        backgroundColor: null
      },
       credits: {
		      enabled: false
		  },
      title: {
        text: "Section Break-down"
      },
      xAxis: {
        categories: ['Total','Audio', 'Camera', 'Computer', 'Television', 'Telephone', 'Sasu', 'Task Team', 'Manager' ]
      },
      yAxis: {
        title: {
          text: "Partners"
        }
      },
      series: [
      {
				name: "Section",
				type: 'column',
        data: [<%= @shift_managers.count + @shift_non_managers.count%>,0, 5, 3, 5, 3, 3, 2, <%= @shift_managers.count %>]
      },
      ]
    });
  });
</script>

<h1> Calendar work plan for <%= simple_date(@calendar_date) %></h1>
<div class = "CalendarBreakdown">
	<h3>
		Break-down 
		<span class = actions>
					<%= link_to 'Book OverTime' %> |
					<%= link_to 'Book Holiday'%> |
					<%= link_to "Today's Bridge", bridges_url %> |
					<%= link_to 'More Stats...' %> 
		</span>
	</h3>
	<h4>Who's working?</h4>
		<div class = 'element'>
			<% if not @shift_non_managers.empty? %>
			<%= @shift_non_managers.map{|non_manager| non_manager.partner.first_name + simple_start_end_time(non_manager.start_at, non_manager.end_at) }.to_sentence %><% else %> None <% end %>	
		</div>
	<h4>Who's on Holiday?</h4>
		<div class = 'element'> 
			<% if not @shift_holidays.empty? %><%= @shift_holidays.map{|holiday| holiday.partner.first_name }.to_sentence %><% else %> None <% end %>
		</div>
	<h4>Which managers are in?</h4>
		<div class = 'element'> 
			<% if not @shift_managers.empty? %><%= @shift_managers.map{|manager| manager.partner.first_name }.to_sentence %><% else %> None <% end %>
		</div>
	<h4>The stats...</h4>
		<div class = 'element'>
			All Partners: <%= @shift_non_managers.count + @shift_managers.count %> <br>
			Managers: <%= @shift_managers.count %> <br>
			Non-Managers: <%= @shift_non_managers.count %> <br>
			Sections:<br>
		</div>
		<div id="CalendarCharts_1" class = "CalendarCharts" style="width:100%; height:250px;"></div>
</div>
<div class = "CalendarActions" >
	<%= link_to 'Back to Calendar', partners_url %> |
	<%= link_to "Today's Bridge", bridges_url %>
</div>

