<%= div_for work_plan do %>
	<h3>
		<span class='actions'>
			<%= link_to 'Delete', [@partner, work_plan], :confirm => 'Are you sure?', :method => :delete %>
		</span>
	</h3>
	
	<h4> Weekly Rotas </h4>
		<%= render @partner.work_plan.weekly_rotas %>
	<h4> Holidays </h4>
		
		Holiday Entitlement: <%= work_plan.holiday_entitle %> <br>
		Holidays Booked: <%= work_plan.holiday_taken %> <br>
		Holidays Left: <%= holidays_left(work_plan.holiday_entitle, work_plan.holiday_taken) %> <br>
		Dates Booked:
		<span class='holiday_dates'>
		<%= render @partner.work_plan.holidays %>
		</span>
<% end %>

